<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.fragments.ProfilFragment">

    <!-- Top bar -->
    <androidx.cardview.widget.CardView
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardElevation="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linear_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingEnd="20dp"
            android:paddingStart="20dp">

            <TextView
                android:id="@+id/contacts_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:text="Statistiques"
                android:textColor="#BF3131"
                android:textSize="28sp"
                android:textStyle="bold"
                android:fontFamily="@font/myfont"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/ic_settings"
                app:layout_constraintHorizontal_bias="0.0" />

            <ImageView
                android:id="@+id/ic_settings"
                android:layout_width="46dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_settings"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="10dp"
                app:layout_constraintHorizontal_bias="1.0" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <!-- Spinner Layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/spinnerLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Spinner
            android:id="@+id/monthSpinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/yearSpinner"
            android:layout_marginEnd="8dp"/>

        <Spinner
            android:id="@+id/yearSpinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/monthSpinner"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Chart Layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/graphLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/spinnerLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp">

        <!-- Bar Chart -->
        <com.example.appfall.views.BarChartView
            android:id="@+id/barChartView"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Border Lines -->
        <View
            android:id="@+id/leftBorderLine"
            android:layout_width="2dp"
            android:layout_height="200dp"
            android:background="#000000"
            app:layout_constraintTop_toTopOf="@id/barChartView"
            app:layout_constraintBottom_toBottomOf="@id/barChartView"
            app:layout_constraintStart_toStartOf="@id/barChartView"
            app:layout_constraintEnd_toStartOf="@id/barChartView"
            android:layout_marginStart="16dp"/>

        <View
            android:id="@+id/bottomBorderLine"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="#000000"
            app:layout_constraintTop_toBottomOf="@id/barChartView"
            app:layout_constraintStart_toStartOf="@id/barChartView"
            app:layout_constraintEnd_toEndOf="@id/barChartView" />

        <!-- Week Labels -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/labelsLayout"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/barChartView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/label_week_1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Semaine 1"
                android:textSize="10sp"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/myfont"
                android:maxLines="1"
                android:rotation="-30"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/label_week_2"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Semaine 2"
                android:textSize="10sp"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/myfont"
                android:maxLines="1"
                android:rotation="-30"
                app:layout_constraintStart_toEndOf="@id/label_week_1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/label_week_3"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Semaine 3"
                android:textSize="10sp"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/myfont"
                android:maxLines="1"
                android:rotation="-30"
                app:layout_constraintStart_toEndOf="@id/label_week_2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/label_week_4"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Semaine 4"
                android:textSize="10sp"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/myfont"
                android:maxLines="1"
                android:rotation="-30"
                app:layout_constraintStart_toEndOf="@id/label_week_3"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/label_week_5"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Semaine 5"
                android:textSize="10sp"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/myfont"
                android:maxLines="1"
                android:rotation="-30"
                app:layout_constraintStart_toEndOf="@id/label_week_4"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Statistics Section -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/statisticsLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/graphLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/statisticsLinearLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Total Falls -->
            <TextView
                android:id="@+id/totalFalls"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total : 0"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="#000000"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/myfont"
                android:maxLines="1"
                android:ellipsize="end"/>

            <!-- Rescued Falls -->
            <TextView
                android:id="@+id/rescuedFalls"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TraitÃ©es : 0"
                android:textColor="@color/deadly_depth"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/myfont"
                android:maxLines="1"
                android:ellipsize="end"/>

            <!-- False Falls -->
            <TextView
                android:id="@+id/falseFalls"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fausses : 0"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@color/hot_jazz"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/myfont"
                android:maxLines="1"
                android:ellipsize="end"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Users List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/usersRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/statisticsLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Full Page Progress Bar -->
    <FrameLayout
        android:id="@+id/fullPageProgressLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ProgressBar
            android:id="@+id/fullPageProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:indeterminate="true"/>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
